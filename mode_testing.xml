<mujoco model="testing_model">
  <include file="Empty_scene.xml"/> <!-- so we can use the ready scene !-->


  <!-- define assets!-->
  <asset>
    <material name="white" rgba="1 1 1 1"/> <!--color white, to use it we add material="white" to the element!-->
    <material name="red" rgba=".9 0 0 1"/>
    <material name="green"  rgba="0 0.9 0 1"/>
    <material name="yellow" rgba="0.8 1 0 1"/>
  </asset>

  <option solver="CG" tolerance="1e-6"/>

  <size nconmax="3000" njmax="3000" nstack="5000"/>



  <worldbody>
    <!--<camera pos="0 0 0" mode="track"/> <!-keep an entire mechanism in view.!-->
    <geom type="plane" size="8 8 0.1" material="red" pos="0 0 0.1"/> <!-- the floor we work on !-->

    <body pos="0 5 0">
      <geom type="sphere" size="0.01 0 0"/>
    </body>
    <!--the walls !-->

    <body name="wall" pos="0 8 1">
      <geom type="box" size="8 0.2 1" material="red"/> <!--size = " length width higth"!-->
    </body>
    <body name="wall2" pos="8 0 1">
      <geom type="box" size="0.2 8 1" material="red"/> <!--size = " length width higth"!-->
    </body>

    <body name="wall3" pos="0 -8 1">
      <geom type="box" size="8 0.2 1" material="red"/> <!--size = " length width higth"!-->
    </body>
    <body name="wall4" pos="-8 0 1">
      <geom type="box" size="0.2 8 1" material="red"/> <!--size = " length width higth"!-->
    </body>

    <body name="agent1" pos="-2 0 2.7">
      <joint name="joint_n_1" type="slide"/>
      <geom type="box" size="1 1 1" material="green"/>
    </body>

    <body name="agent2" pos="2 0 1.1">
      <joint name="joint_n_2" type="hinge"/>
      <geom type="box" size="0.5 0.5 1" material="yellow"/>
    </body>

    <body name="agent3" pos="0 0 1.1">
      <joint name="joint_ball" type="ball"/>
      <geom type="sphere" size="1 0 0" material="green"/>
    </body>
  </worldbody>
</mujoco>
